<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fading"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/lv_projects"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/lv_margin_top_main"
        android:layout_marginStart="@dimen/lv_margin_start_main"
        android:layout_marginEnd="@dimen/lv_margin_end_main"
        android:layout_marginBottom="@dimen/lv_margin_bottom_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_title_main"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_title_text_size_main"
        app:layout_constraintBottom_toTopOf="@+id/lv_projects"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>